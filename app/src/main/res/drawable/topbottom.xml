<shape xmlns:android="http://schemas.android.com/apk/res/android">
    android:shape="rectangle">
    <corners android:radius="100dp" />
    <gradient
        android:angle="90"
        android:startColor="#1474b1"
        android:endColor="#0b5ea2"
        android:centerColor="#0c65a9"
        android:type="linear" />

    <stroke
        android:width="0dp"
        android:color="#000" />
    <corners
        android:bottomRightRadius="1dp"
        android:bottomLeftRadius="1dp"
        android:topLeftRadius="1dp"
        android:topRightRadius="1dp"/>
    <padding
        android:left="1dp"
        android:top="1dp"
        android:right="1dp"
        android:bottom="1dp" />


</shape>